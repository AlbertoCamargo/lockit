<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>identification</th>
      <th colspan="3">full name</th>
      <th colspan="3">email</th>
      <th colspan="3">Confirmed</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.identification %></td>
        <td colspan="3"><%= user.full_name %></td>
        <td colspan="3"><%= user.email %></td>
        <td colspan="3"><%= user.confirmed? %></td>
        <td colspan="3"><%= link_to 'Show', user %></td>
        <td colspan="3"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td colspan="3"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

